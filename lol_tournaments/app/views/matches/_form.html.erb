<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>
      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.datetime_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :team1_id, "Team 1" %>
    <%= form.collection_select :team1_id, Team.all, :id, :name, 
        { include_blank: 'Select a team' },
        { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :team2_id, "Team 2" %>
    <%= form.collection_select :team2_id, Team.all, :id, :name, 
        { include_blank: 'Select a team' },
        { class: "form-control" } %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", match.persisted? ? match_path(match) : matches_path, class: "btn btn-danger" %>
  </div>
<% end %> 